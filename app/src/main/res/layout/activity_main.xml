<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="com.cardinalHealth.test.viewModel.MainActivityViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activity.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_marginTop="@dimen/dimen_24dp"
            app:contentInsetEnd="@dimen/dimen_0dp"
            app:contentInsetStart="@dimen/dimen_0dp"
            app:contentInsetLeft="@dimen/dimen_0dp"
            app:contentInsetRight="@dimen/dimen_0dp"
            android:contentInsetStart="@dimen/dimen_0dp"
            android:contentInsetEnd="@dimen/dimen_0dp"
            android:contentInsetLeft="@dimen/dimen_0dp"
            android:contentInsetRight="@dimen/dimen_0dp"
            app:title=""
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    app:text="@{viewModel.titleText}"
                    android:visibility="@{viewModel.titleVisibility}"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imgBack"
                    android:layout_toStartOf="@+id/imgSearch"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:layout_centerVertical="true"
                    android:hint="@string/search_by"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLines="1"
                    android:textCursorDrawable="@drawable/cursor_drawable"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:visibility="@{viewModel.searchFieldVisibility}"
                    android:textColorHint="@color/white"
                    android:onTextChanged="@{viewModel.onTextChanged}"
                    android:background="@android:color/transparent"
                    android:text="@{viewModel.searchFieldText}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_back"
                    android:onClick="@{viewModel::onBackPress}"
                    android:layout_marginStart="@dimen/dimen_8dp"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_search"
                    android:onClick="@{viewModel::onSearchClick}"
                    android:layout_marginEnd="@dimen/dimen_8dp"
                    android:visibility="@{viewModel.searchIconVisibility}"
                    />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        >
    </androidx.fragment.app.FragmentContainerView>
    <FrameLayout
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_0dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="@{viewModel.progressVisibility}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.core.widget.ContentLoadingProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/colorPrimary"
            android:layout_gravity="center"
            style="@android:style/Widget.Holo.ProgressBar.Large"
            />
    </FrameLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/noResultFound"
        android:visibility="@{viewModel.noResultFoundVisibility}"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>